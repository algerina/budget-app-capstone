<div id="<%= dom_id group %>" class="d-flex bg-light m-3">  
  <%= link_to group_entities_path(group.id), class:"text-decoration-none text-dark w-100" do %>    
      <div class="d-flex justify-content-between align-items-center gap-3 my-3 container">        
        <%= image_tag group.avatar, width: 80 if group.avatar.attached? %>
        <p class="m-0"> <%= group.name %></p>
        <strong class="m-0"> $<%= group.total_amount %></strong>
      </div>
  <% end %>
</div>
