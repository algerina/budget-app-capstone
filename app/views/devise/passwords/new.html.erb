<div class="d-flex justify-content-around gap-2 m-0 p-2 align-items-center bg-primary mb-5">
  <h2 class="text-light">FORGOT YOUR PASSWORD?</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-3 container">    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email" %>
  </div>

  <div class="actions p-3 bg-success d-grid container fixed-bottom">
    <%= f.submit "RESET PASSWORD", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
