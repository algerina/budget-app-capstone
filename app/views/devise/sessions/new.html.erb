<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-between gap-2 m-0 p-2 align-items-center bg-primary mb-5">
    <%= link_to '<', root_path, class: "text-light text-decoration-none fs-1 text me-5"%>
    <h2 class="text-light m-0">LOGIN</h2>  
    <%= f.submit "Next", class: "btn text-light" %>      
  </div>
  
  <div class="field my-3 container">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
  </div>

  <div class="field my-3 container">        
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-3 container">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>      
<% end %>
<%= render "devise/shared/links" %>
  
