<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-between gap-2 m-0 p-2 align-items-center bg-primary mb-5">
    <%= link_to '<', root_path, class: "text-light text-decoration-none fs-1 text me-5"%>
    <h2 class="text-light m-0">REGISTER</h2>  
    <%= f.submit "Next", class: "btn text-light" %>      
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field container my-3">    
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"Full name" %>
  </div>
  
  <div class="field container my-3">    
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder:"Email" %>
  </div>

  <div class="field container my-3">    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Password" %>
  </div>

  <div class="field container my-3">    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Password confirmation" %>
  </div>  
<% end %>
<%= render "devise/shared/links" %>
